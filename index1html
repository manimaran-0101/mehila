<script>
    function moveNo() {
        var noBtn = document.getElementById('no-btn');
        noBtn.style.left = Math.random() * 100 + 'px';
        noBtn.style.top = Math.random() * 100 + 'px';
    }

    function showLogin() {
        document.querySelector('.question-container').style.display = 'none';
        document.querySelector('.login-container').style.display = 'flex';
    }

    function login() {
        var username = document.getElementById("username").value;
        var password = document.getElementById("password").value;

        if (username === "mehila" && password === "mehi0101") {
            document.querySelector('.login-container').style.display = 'none';
            document.querySelector('.container').style.display = 'block';
            document.body.style.overflowY = 'auto'; // Enable scrolling

            // Show animations after login
            document.querySelector('.doremon').style.display = 'block';
            document.querySelector('.shinchan').style.display = 'block';
        } else {
            alert("Incorrect username or password!");
        }
    }
</script>

